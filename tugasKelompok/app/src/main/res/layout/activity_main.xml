<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:backgroundTint="@color/purple"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrasi Penduduk"
                android:id="@+id/labelText"
                android:textSize="26dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/purple"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/nikText"
                android:background="@drawable/custom_et"
                android:drawableLeft="@drawable/baseline_add_24"
                android:drawablePadding="8dp"
                android:inputType="number"
                android:singleLine="true"
                android:hint="NIK"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="25dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/namaText"
                android:background="@drawable/custom_et"
                android:drawableLeft="@drawable/baseline_account_circle_24"
                android:drawablePadding="8dp"
                android:inputType="text"
                android:singleLine="true"
                android:hint="Nama"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_et"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/jenisKelaminText"
                    android:text="Jenis Kelamin"
                    android:textSize="17dp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/purple"/>

                <RadioGroup
                    android:id="@+id/jenisKelamin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/jenisKelaminText"
                    android:padding="8dp">
                    <RadioButton
                        android:layout_width="170dp"
                        android:layout_height="35dp"
                        android:id="@+id/jenisKelaminRadioMale"
                        android:text="Pria"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/jenisKelaminRadioFemale"
                        android:text="Wanita"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"/>
                </RadioGroup>
            </RelativeLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/tempatLahirText"
                android:background="@drawable/custom_et"
                android:drawableLeft="@drawable/baseline_add_location_24"
                android:drawablePadding="8dp"
                android:inputType="text"
                android:singleLine="true"
                android:hint="Tempat lahir"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/tanggalLahirText"
                android:background="@drawable/custom_et"
                android:drawableLeft="@drawable/baseline_date_range_24"
                android:inputType="date"
                android:drawablePadding="8dp"
                android:hint="Tangal lahir"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/alamatText"
                android:background="@drawable/custom_et"
                android:drawableLeft="@drawable/baseline_add_location_24"
                android:drawablePadding="8dp"
                android:inputType="text"
                android:singleLine="true"
                android:hint="Alamat"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/emailText"
                android:background="@drawable/custom_et"
                android:drawableLeft="@drawable/baseline_alternate_email_24"
                android:drawablePadding="8dp"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:hint="Email"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="10dp"/>
            
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/telponText"
                android:background="@drawable/custom_et"
                android:drawableLeft="@drawable/baseline_call_24"
                android:drawablePadding="8dp"
                android:inputType="phone"
                android:hint="Telpon"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/buttonSend"
                android:text="Registrasi"
                android:textSize="18dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/purple"
                app:cornerRadius = "10dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>